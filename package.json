{
  "name": "eyeryhthm",
  "version": "1.7.0",
  "private": true,
  "main": "dist-electron/main.js",
  "author": "EyeRhythm",
  "description": "Privacy-focused real-time eye movement tracking application",
  "repository": {
    "type": "git",
    "url": "https://github.com/Benedict-Carling/eyeryhthm.git"
  },
  "build": {
    "appId": "com.eyerhythm.app",
    "productName": "EyeRhythm",
    "publish": {
      "provider": "github",
      "owner": "Benedict-Carling",
      "repo": "eyeryhthm"
    },
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "icon": "build-resources/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build-resources/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "build-resources/icon.png",
      "target": [
        "AppImage"
      ]
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "test": "playwright test --reporter=line",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "prepare": "husky",
    "verify": "npm run typecheck && npm run lint && npm run test:unit -- --run",
    "electron:dev": "concurrently -k \"npm run dev -- --port 3000\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:3000 && tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run verify && ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:mac": "npm run verify && ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "electron:build:win": "npm run verify && ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --win",
    "electron:build:linux": "npm run verify && ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --linux"
  },
  "dependencies": {
    "@aptabase/electron": "^0.3.1",
    "@mediapipe/tasks-vision": "0.10.21",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@sentry/nextjs": "^10.29.0",
    "d3": "^7.9.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/dom-mediacapture-transform": "^0.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  }
}
