{
  "name": "eyeryhthm",
  "version": "1.2.4",
  "private": true,
  "main": "dist-electron/main.js",
  "author": "BlinkTrack",
  "description": "Privacy-focused real-time eye movement tracking application",
  "repository": {
    "type": "git",
    "url": "https://github.com/Benedict-Carling/eyeryhthm.git"
  },
  "build": {
    "appId": "com.blinktrack.eyeryhthm",
    "productName": "BlinkTrack",
    "publish": {
      "provider": "github",
      "owner": "Benedict-Carling",
      "repo": "eyeryhthm",
      "private": false
    },
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test --reporter=line",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "prepare": "husky",
    "electron:dev": "concurrently -k \"npm run dev -- --port 3000\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:3000 && tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron .",
    "electron:build": "ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:mac": "ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "electron:build:win": "ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --win",
    "electron:build:linux": "ELECTRON_BUILD=true npm run build && tsc -p electron/tsconfig.json && electron-builder --linux"
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "0.10.21",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@sentry/nextjs": "^9.40.0",
    "d3": "^7.9.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/dom-mediacapture-transform": "^0.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  }
}
